<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:text="@string/select_your_institute"
        android:textAllCaps="true"
        android:textColor="@color/Crimson"
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/textView10" />

    <Spinner
        android:id="@+id/insNameSpin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="13dp"
        android:background="@color/Silver" />

    <EditText
        android:id="@+id/reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/Go"
        android:layout_below="@+id/insNameSpin"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="96dp"
        android:background="#6ef4f4f4"
        android:drawablePadding="78dp"
        android:ems="1"
        android:hint="@string/registration_number"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColorHint="#fff" />


    <Button
        android:id="@+id/Go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView10"
        android:layout_below="@+id/reg"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="81dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/background_login_two"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:text="@string/go"
        android:textAllCaps="true"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="20dp"
        android:text="@string/choose_your_institute_here"
        android:textColor="@color/Crimson" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reg"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="65dp"
        android:text="@string/enter_your_institute_reg_number_here"
        android:textColor="@color/Crimson" />


</RelativeLayout>